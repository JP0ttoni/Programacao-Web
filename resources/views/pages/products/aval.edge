@layouts.app() 
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dê a sua Avaliação</title>
</head>
<body class="bg-black">
    <main class="container mx-auto p-8">
        <h1 class="text-white text-3xl font-bold mb-6">Dê a sua Avaliação</h1>
        <form id='form' action="{{ route('product_post_aval', { id: product_id }) }}?person_name={{ user_name }}&user_email={{ user_email }}" method="POST" class="bg-white shadow-md p-6">
